<UserControl x:Class="LediReader.Gui.BookSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LediReader.Gui"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>

            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>

        </Grid.RowDefinitions>
        <Label Content="Theme:" Grid.Row="0"/>
        <CheckBox Content="Use dark theme" Grid.Row="2" IsChecked="{Binding UseDarkTheme, Mode=TwoWay}"/>

        <StackPanel Orientation="Horizontal" Grid.Row="4">
            <Label Content="Left and right margin:"/>
            <Label Content="{Binding LeftAndRightMargin}"/>
        </StackPanel>
        <Slider x:Name="_guiSlider" Grid.Row="6" Minimum="16" Maximum="128" Value="{Binding LeftAndRightMargin, Mode=TwoWay}"/>

    </Grid>
</UserControl>
